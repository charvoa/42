#include "exec.h"

int	size_of_tab(char **tab)
{
  int	i;

  i = 0;
  while (tab[i])
    i++;
  return (i);
}

int	exec_simple(char **cmd, char **path, char **env)
{
  int	i;
  int	status;
  pid_t	pid;
  char	*pass;

  printf("cmd received => %s\n", cmd);
  /* if (check_builtin(mini) == 0) */
  /*   return(0); */
  i = -1;
  if ((pid = fork()) == -1)
    exit(-1);
  else if (pid == 0)
    {
      while (path[++i])
        {
	  printf("path[%d] => %s\n", i, path[i]);
          pass = strcat(path[i], cmd);
	  printf("pass => %s\n", pass);
        if (execve(pass, cmd[0], env) != -1)
            return(0);
        }
      printf("%s: Command not found\n", cmd);
      return (0);
    }
  else
    wait(&status);
  return (0);
}

void	send(char **tab, char **path, char **env)
{
  int	i;
  int	size;

  i = 0;
  size = size_of_tab(tab);
  printf("%s\n", env[0]);
  while (tab[i])
    {
      if (size == 1)
	{
	  exec_simple(tab, path, env);
	}
      i++;
    }
}
